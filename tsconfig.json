{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "paths": {
      "@config/*": ["config/*"],
      "@controller/*": ["controller/*"],
      "@routes/*": ["routes/*"],
      "@schema/*": ["schema/*"],
      "@middelware/*": ["middelware/*"]
    }
  },
  "include": ["src/**/*", "src/test", "src/test"],
  "exclude": ["node_modules"]
}
